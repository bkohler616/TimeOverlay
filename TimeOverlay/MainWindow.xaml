<Window x:Class="TimeOverlay.MainWindow"
		  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  Title="MainWindow"
		  Height="100"
		  Width="300"
		  WindowStyle="None"
		  ShowInTaskbar="False"
		  AllowsTransparency="True"
		  Background="Transparent"
		  MouseDown="Window_MouseDown">
	<Border CornerRadius="20"
			  Background="#5f000000">

		<Border BorderBrush="Transparent"
				  BorderThickness="5"
				  CornerRadius="10">
			<StackPanel VerticalAlignment="Center"
							Margin="10">
				<Label Name="lblTime" Foreground="White" FontSize="30">Getting Time....</Label>
			</StackPanel>

		</Border>
		<Border.ContextMenu>
			<ContextMenu>
				<MenuItem Click="CloseOverlay_Click" Header="_Close"/>
			</ContextMenu>
		</Border.ContextMenu>
	</Border>

</Window>
