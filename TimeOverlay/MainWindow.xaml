        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="100" Width="200"
		  WindowStyle="None"
		  ShowInTaskbar="False"
		  AllowsTransparency="True"
		  Background="Transparent" MouseDown="Window_MouseDown" MouseRightButtonDown="Window_MouseRightButtonDown">
	<Border CornerRadius="20"
		  Background="#5f000000">

		<Border BorderBrush="Transparent"
		  BorderThickness="5"
		  CornerRadius="10">
			<StackPanel VerticalAlignment="Center" Margin="10">
					
				</StackPanel>

	</Border>
	</Border>

</Window>
