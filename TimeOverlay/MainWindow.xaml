<Window x:Class="TimeOverlay.MainWindow"
		  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		  Title="TimeOverlay"
		  Height="110"
		  Width="300"
		  WindowStyle="None"
		  ShowInTaskbar="False"
		  AllowsTransparency="True"
		  Background="Transparent"
		  MouseDown="Window_MouseDown"
		  Topmost="True"
		  Closing="MainWindow_OnClosing"
		  ResizeMode="NoResize">
	<Border CornerRadius="20"
			  Background="#7f000000">

		<Border BorderBrush="Transparent"
				  BorderThickness="5"
				  CornerRadius="10">
			<StackPanel VerticalAlignment="Top"
							Margin="10,0,10,10">
				<Label Name="LblDate"
						 Foreground="Gray"
						 FontSize="15"
						 Loaded="LblDate_OnLoaded"></Label>
				<Label Name="LblTime"
						 Foreground="White"
						 FontSize="30"
						 Loaded="LblTime_OnLoaded"></Label>
			</StackPanel>

		</Border>
		<Border.ContextMenu>
			<ContextMenu>
				<MenuItem Click="CloseOverlay_Click" Header="_Close"/>
				<MenuItem Click="ShowSettings_Click" Header="_Settings"/>
				<MenuItem Click="ShowAbout_Click" Header="_About"></MenuItem>
			</ContextMenu>
		</Border.ContextMenu>
	</Border>

</Window>
