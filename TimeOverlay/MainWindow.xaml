<Window x:Class="TimeOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeOverlay"
        MinHeight="50"
        MinWidth="100"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        Topmost="True"
        Closing="MainWindow_OnClosing"
        SizeToContent="WidthAndHeight"
		  ResizeMode="NoResize"
		  IsHitTestVisible="True"
		  Name="WinMainWindowHandler">
	<Border Name="BrdrBackground"
	        CornerRadius="20"
	        Background="#000000"
	        Opacity="50">

		<Border BorderBrush="Transparent"
		        BorderThickness="5"
		        CornerRadius="10">
			<StackPanel VerticalAlignment="Top"
			            Margin="10,0,10,10">
				<Label Name="LblDate"
				       Foreground="Gray"
				       FontSize="15"
				       Loaded="LblDate_OnLoaded" />
				<Label Name="LblTime"
				       Foreground="White"
				       FontSize="30"
				       Loaded="LblTime_OnLoaded" />
			</StackPanel>

		</Border>
		<Border.ContextMenu>
			<ContextMenu>
				<MenuItem Click="CloseOverlay_Click"
				          Header="_Close" />
				<MenuItem Click="ShowSettings_Click"
				          Header="_Settings" />
				<MenuItem Click="ShowAbout_Click"
				          Header="_About" />
			</ContextMenu>
		</Border.ContextMenu>
	</Border>

</Window>